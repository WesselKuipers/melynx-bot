{
  "private": true,
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Wessel Kuipers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wesselkuipers/melynx-bot.git"
  },
  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "node packages/server/dist/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "client:dev": "vite packages/client",
    "server:dev": "ts-node -TP packages/server/tsconfig.json ./packages/server/src/index.ts",
    "client:build": "vite build packages/client",
    "server:build": "yarn workspace melynx-bot run tsc && yarn copyfiles \"packages/server/src/assets/**\" packages/server/dist -u 3"
  },
  "cacheDirectories": [
    "node_modules",
    "client/node_modules"
  ],
  "devDependencies": {
    "@types/btoa": "^1.2.3",
    "@types/classnames": "^2.3.1",
    "@types/connect-history-api-fallback": "^1.3.5",
    "@types/cors": "^2.8.12",
    "@types/css-modules": "^1.0.2",
    "@types/dedent": "^0.7.0",
    "@types/express": "4.17.13",
    "@types/node": "^18.0.3",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "source-map-loader": "^4.0.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
